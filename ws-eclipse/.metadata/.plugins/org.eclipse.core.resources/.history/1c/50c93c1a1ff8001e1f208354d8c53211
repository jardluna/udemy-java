import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		
		int y = 32;
		double x = 10.357841;
		
		System.out.println("Olá Mundo!");
		System.out.println("Número inteiro: " + y);
		System.out.println("Número decimal: " + x);
		System.out.printf("Número formatado com duas casas decimais: %.2f %n", x);
		System.out.printf("Número formatado com quatro casas decimais (padrão BR ','): %.4f %n", x);
		Locale.setDefault(Locale.US);
		System.out.printf("Número formatado com quatro casas decimais (padrão US '.'): %.4f %n", x);
		System.out.println("Resultado: " + x + " metros (método padrão)");
		System.out.printf("Resultado: %.2f metros %n(método formatado)", x);
	}
}
